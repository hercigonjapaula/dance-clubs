@model IEnumerable<DanceClubs.Data.Models.Image>

@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-primary" href="/Images/Create" style="float:right">Dodaj sliku</a>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        @{ int i = 1;}
        @foreach (var image in Model.Skip(1))
        {
            <li data-target="#carouselExampleIndicators" data-slide-to="@i++"></li>
        }

    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-75" src="@Model.First().ImageUrl" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>@Model.First().Author.FirstName - @Model.First().Group.Name</h5>
                <p>@Model.First().Published.ToString("dd.MM.yyyy")</p>
            </div>
        </div>
        @foreach (var image in Model.Skip(1))
        {
            <div class="carousel-item">
                <img class="d-block w-75" src="@image.ImageUrl" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@image.Author.FirstName - @image.Group.Name</h5>
                    <p>@image.Published.ToString("dd.MM.yyyy")</p>
                </div>
            </div>
        }
    </div>    
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    @if (User.IsInRole("Vlasnik"))
    {
        <form asp-controller="Images" asp-action="Create">
            <input name="ImageUrl" 
        </form>
    }
</div>