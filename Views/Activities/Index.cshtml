@model IEnumerable<DanceClubs.Data.Models.Activity>

@{
    ViewData["Title"] = "Aktivnosti";
}

<p>
    <a asp-action="Create">Dodaj novu aktivnost</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Početak
            </th>
            <th>
                Kraj
            </th>
            <th>
                Lokacija
            </th>
            <th>
                Vrsta aktivnosti
            </th>
            <th>
                Grupa
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.Name)
            </td>            
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |*@
                <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> @*|*@
                @*<a asp-action="Delete" asp-route-id="@item.Id">Izbriši</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
