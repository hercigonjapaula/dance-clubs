@model ReportModel


<h1>Odaberi</h1>

<h4>Izvještaj</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Club" class="control-label">Klub</label>
                <select asp-for="Club" class="form-control" asp-items="ViewBag.ClubId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateFrom" class="control-label">Od</label>
                <input asp-for="DateFrom" class="form-control" />
                <span asp-validation-for="DateFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTo" class="control-label">Do</label>
                <input asp-for="DateTo" class="form-control" />
                <span asp-validation-for="DateTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReportCategory" class="control-label">Kategorija</label>
                <select asp-for="ReportCategory" class="form-control" asp-items="ViewBag.ReportCategory"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Odaberi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
