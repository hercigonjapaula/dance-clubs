@model DanceClubs.Models.CalendarIndexModel

<html lang='hr'>
<head>
    <meta charset='utf-8' />

    <link href='~/js/fullcalendar-4.1.0/packages/core/main.css' rel='stylesheet' />
    <link href='~/js/fullcalendar-4.1.0/packages/daygrid/main.css' rel='stylesheet' />
    <link href='~/js/fullcalendar-4.1.0/packages/timegrid/main.css' rel='stylesheet' />

    <script src='~/js/fullcalendar-4.1.0/packages/core/main.js'></script>
    <script src="~/js/fullcalendar-4.1.0/packages/core/locales/hr.js"></script>
    <script>

        $(function () {

            $('#calendar').fullCalendar({
            });

        });

    </script>
    <script src='~/js/fullcalendar-4.1.0/packages/daygrid/main.js'></script>
    <script src='~/js/fullcalendar-4.1.0/packages/timegrid/main.js'></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                plugins: ['timeGrid'],
                events: "/Calendar/GetEvents/",
                locale: 'hr',
                timezone: 'UTC',
                minTime: "08:00:00",
                maxTime: "24:00:00"
            });

            calendar.render();
        });

    </script>
</head>
<body>
    <a class="btn btn-primary" href="/Activities/Create" style="float:right;margin:5px;background-color:#2C3E50;">Dodaj aktivnost</a>
    <div id='calendar' style=""></div>

</body>
</html>

